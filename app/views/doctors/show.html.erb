<h1><%= @doctor.name %></h1>
<h4>Department: <%= @doctor.department %></h4>
<h4>Appointments:</h4>
<ul>
    <% @doctor.appointments.each do |apt| %>
        <li><%= apt.appointment_datetime.strftime("%B %d, %Y at %k:%M") %> - <%= link_to apt.patient.name, patient_path(apt.patient) %></li>
    <% end %>
</ul>